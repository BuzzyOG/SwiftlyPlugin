package me.Chris.SwiftlyCrafted;

import me.Chris.SwiftlyCrafted.Hub.main;

import org.bukkit.ChatColor;
import org.bukkit.entity.Player;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.player.AsyncPlayerChatEvent;

import Commands.RankSubCommands;
public class ChatListener implements Listener{
	public static main plugin;
	public ChatListener(main plugin) {
        ChatListener.plugin = plugin;
	}
	@EventHandler
		public void onEvent(AsyncPlayerChatEvent event){
		Player p = event.getPlayer();
		event.setFormat("%s: %s");
		if(event.getMessage().contains("ip") && event.getMessage().contains("join")){
			if(!p.isOp()) {
				event.setCancelled(true);
				p.sendMessage(ChatColor.BLUE + ">>"  + ChatColor.RED + " Please do not advertise!");
		  	}
		}
		if(event.getMessage().contains("fuck") || event.getMessage().contains("Fuck") || event.getMessage().contains("FUCK") || event.getMessage().contains("FUU") || event.getMessage().contains("FU")) {
			event.setMessage(event.getMessage().replaceAll("(?!)fuck", "****"));
			p.sendMessage(ChatColor.BLUE + ">>" + ChatColor.RED + " Please do not swear!");
		}
	}
}
