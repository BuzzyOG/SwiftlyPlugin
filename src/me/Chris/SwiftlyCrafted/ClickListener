		    playersDir.mkdir();
		}
		 
		File playerFile = new File(this.plugin.getDataFolder() + File.separator + "players" + File.separator + player.getName() + ".yml");
		if(!playerFile.exists()){
		     try {
				playerFile.createNewFile();
			} catch (IOException ee) {
