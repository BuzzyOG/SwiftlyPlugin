	    lore.add(ChatColor.DARK_AQUA + "Left click " + ChatColor.GRAY + "to purchase " + ChatColor.DARK_AQUA + "LEVEL 1" + ChatColor.GRAY + ".");
	    grenadeim.setLore(lore);
